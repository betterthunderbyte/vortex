<section class="hero is-light is-bold is-fullheight">
    <div class="hero-body is-centered">
        <div class="column is-12-desktop">
            <div class="columns is-centered">

                <div class="column is-3-desktop">

                    <div class="card">
                        <div class="card-content has-text-centered-desktop">
                            <div class="content is-medium">
                                <h1>Passwort erneuern</h1>
                            </div>

                        </div>
                        <div class="card-content">
                            {% for error in errors %}
                                <div class="notification is-danger">
                                    {{error}}
                                </div>
                            {% endfor %}
                            <form method="post">
                                <input type="hidden" name="renew" value="">
                                <div class="field">
                                    <p class="control has-icons-left">
                                        <label><input class="input" type="password" placeholder="Passwort" name="password"></label>
                                        <span class="mdi mdi-lock icon is-small is-left"></span>
                                    </p>
                                </div>

                                <div class="field">
                                    <p class="control has-icons-left">
                                        <label><input class="input" type="password" placeholder="Passwort wiederholen" name="password_again"></label>
                                        <span class="mdi mdi-lock icon is-small is-left"></span>
                                    </p>
                                </div>
                                <div class="control">
                                    <button type="submit" class="button is-primary is-fullwidth">Speichern und weiter</button>
                                </div>
                            </form>
                        </div>

                        <div class="card-footer-item has-text-centered-desktop">
                            <p>{#<a href="{{ base_url }}">Registrieren</a> · <a href="{{ base_url }}">Passwort vergessen?</a> · #}<a href="{{ base_url }}">Hilfe</a></p>
                        </div>
                        <div class="card-footer-item has-text-centered-desktop">
                            <p>VORTEX Framework @ {{ current_version }}</p>
                        </div>
                    </div>

                </div>

            </div>

        </div>
    </div>
</section>
